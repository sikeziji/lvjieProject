<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测量参数管理"
            android:textSize="25px" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/eTMeasParam"
            style="@style/CEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:hint="添加测量参数名"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:paddingLeft="8px" />

        <EditText
            android:id="@+id/eTMeasParamAddr"
            style="@style/CEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:hint="添加设备地址"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:paddingLeft="8px" />

        <Button
            android:id="@+id/addMeasParam"
            style="@style/CButton_Big"
            android:layout_width="wrap_content"
            android:layout_height="45px"
            android:layout_marginRight="100px"
            android:text="添加" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="测量参数列表"
            android:textSize="25px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.yzlm.cyl.clibrary.Control.CSideslipListView
            android:id="@+id/CMeasParamList"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_margin="10px"
            android:layout_weight="1"></com.yzlm.cyl.clibrary.Control.CSideslipListView>
    </LinearLayout>

</LinearLayout>
