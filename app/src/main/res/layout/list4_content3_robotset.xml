<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="800px"
        android:layout_height="427px"
        android:layout_marginTop="25px"
        android:background="@drawable/bj_p"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnReturn_p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:background="@null"
                android:src="@drawable/btn_return" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/robot_set_up"
                android:textColor="@android:color/white"
                android:textSize="20px" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/list2con1line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="30px"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="110px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="5"
                        android:text="@string/optocoupler_settings"
                        android:textColor="@android:color/white"
                        android:textSize="25px" />

                    <ToggleButton
                        android:id="@+id/tBtnOptocoupler_settings"
                        android:layout_width="92px"
                        android:layout_height="42px"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10px"
                        android:background="@drawable/togglebtn"
                        android:textOff=" "
                        android:textOn=" " />

                    <LinearLayout
                        android:id="@+id/list2con1line1_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/Btn_gosz_x"
                            android:layout_width="100px"
                            android:layout_height="40px"
                            android:layout_marginLeft="10px"
                            android:background="@drawable/toggle_botton"
                            android:text="X"
                            android:textAllCaps="false"
                            android:textSize="18px" />

                        <Button
                            android:id="@+id/Btn_gosz_y"
                            android:layout_width="100px"
                            android:layout_height="40px"
                            android:layout_marginLeft="10px"
                            android:background="@drawable/toggle_botton"
                            android:text="Y"
                            android:textAllCaps="false"
                            android:textSize="18px" />

                        <Button
                            android:id="@+id/Btn_gosz_z"
                            android:layout_width="100px"
                            android:layout_height="40px"
                            android:layout_marginLeft="10px"
                            android:background="@drawable/toggle_botton"
                            android:text="Z"
                            android:textAllCaps="false"
                            android:textSize="18px" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list2con1line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="30px"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/list2con1line2_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="110px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10px"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="5"
                            android:text="@string/coordinate_settings"
                            android:textColor="@android:color/white"
                            android:textSize="25px" />

                        <ToggleButton
                            android:id="@+id/tBtnCoordinate_settings"
                            android:layout_width="92px"
                            android:layout_height="42px"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10px"
                            android:background="@drawable/togglebtn"
                            android:textOff=" "
                            android:textOn=" " />

                        <LinearLayout
                            android:id="@+id/list2con1line2_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="100px"
                                android:layout_height="40px"
                                android:layout_marginLeft="10px"
                                android:background="@drawable/toggle_botton"
                                android:enabled="false"
                                android:text="X"
                                android:textAllCaps="false"
                                android:textSize="18px" />

                            <Button
                                android:layout_width="100px"
                                android:layout_height="40px"
                                android:layout_marginLeft="10px"
                                android:background="@drawable/toggle_botton"
                                android:enabled="false"
                                android:text="Y"
                                android:textAllCaps="false"
                                android:textSize="18px" />

                            <Button
                                android:layout_width="100px"
                                android:layout_height="40px"
                                android:layout_marginLeft="10px"
                                android:background="@drawable/toggle_botton"
                                android:enabled="false"
                                android:text="Z"
                                android:textAllCaps="false"
                                android:textSize="18px" />

                            <Button
                                android:id="@+id/Btn_zbsz_send"
                                android:layout_width="100px"
                                android:layout_height="40px"
                                android:layout_marginLeft="10px"
                                android:background="@drawable/toggle_botton"
                                android:text="@string/coordinate_send"
                                android:textAllCaps="false"
                                android:textSize="18px" />

                            <Button
                                android:id="@+id/Btn_zbsz_init"
                                android:layout_width="100px"
                                android:layout_height="40px"
                                android:layout_marginLeft="10px"
                                android:background="@drawable/toggle_botton"
                                android:text="@string/init"
                                android:textAllCaps="false"
                                android:textSize="18px" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/list2con1line2_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/sp_zbsz"
                            android:layout_width="92px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25px"
                            android:animationCache="true"
                            android:drawSelectorOnTop="true"
                            android:gravity="center"
                            android:popupBackground="@android:color/white" />

                        <EditText
                            android:id="@+id/edit_zbsz_name"
                            style="@style/CEditText"
                            android:ems="4"
                            android:imeOptions="actionDone" />

                        <Spinner
                            android:id="@+id/sp_zbsz_x"
                            android:layout_width="100px"
                            android:layout_height="40px"
                            android:layout_marginLeft="10px"
                            android:animationCache="true"
                            android:drawSelectorOnTop="true"
                            android:gravity="center"
                            android:popupBackground="@android:color/white" />

                        <Spinner
                            android:id="@+id/sp_zbsz_y"
                            android:layout_width="100px"
                            android:layout_height="40px"
                            android:layout_marginLeft="10px"
                            android:animationCache="true"
                            android:drawSelectorOnTop="true"
                            android:gravity="center"
                            android:popupBackground="@android:color/white" />

                        <Spinner
                            android:id="@+id/sp_zbsz_z"
                            android:layout_width="100px"
                            android:layout_height="40px"
                            android:layout_marginLeft="10px"
                            android:animationCache="true"
                            android:drawSelectorOnTop="true"
                            android:gravity="center"
                            android:popupBackground="@android:color/white" />

                        <Button
                            android:id="@+id/Btn_zbsz_save"
                            android:layout_width="100px"
                            android:layout_height="40px"
                            android:layout_marginLeft="10px"
                            android:background="@drawable/toggle_botton"
                            android:text="@string/save"
                            android:textAllCaps="false"
                            android:textSize="18px" />

                        <Button
                            android:id="@+id/Btn_zbsz_delete"
                            android:layout_width="100px"
                            android:layout_height="40px"
                            android:layout_marginLeft="10px"
                            android:background="@drawable/toggle_botton"
                            android:text="@string/delete"
                            android:textAllCaps="false"
                            android:textSize="18px" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list2con1line3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="30px"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="110px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="5"
                        android:text="@string/coordinate_view"
                        android:textColor="@android:color/white"
                        android:textSize="25px" />

                    <ToggleButton
                        android:id="@+id/tBtnCoordinate_view"
                        android:layout_width="92px"
                        android:layout_height="42px"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10px"
                        android:background="@drawable/togglebtn"
                        android:textOff=" "
                        android:textOn=" " />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list2con1line4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_zblb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="182px"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="5"
                        android:text="@string/coordinate_view"
                        android:textColor="@android:color/white"
                        android:textSize="25px" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
