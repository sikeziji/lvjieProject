<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="798px"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5px"
        android:paddingRight="5px">

        <TextView
            android:id="@+id/histoty_itemId"
            android:layout_width="70px"
            android:layout_height="match_parent"
            android:background="#BDC3BE"
            android:gravity="center"
            android:text=""
            android:textSize="20px" />

        <TextView
            android:id="@+id/histoty_itemTime"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="20px" />


        <LinearLayout
            android:layout_width="290px"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/histoty_itemConc"
                android:layout_width="match_parent"
                android:layout_height="37px"
                android:gravity="center_vertical"
                android:lines="1"
                android:text=""
                android:textSize="20px" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/histoty_itemEnergy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text=""
                    android:textSize="20px" />

            </HorizontalScrollView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/histoty_itemFlow"
                android:layout_width="150px"
                android:layout_height="37px"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="20px" />

            <TextView
                android:id="@+id/histoty_itemTag"
                android:layout_width="80px"
                android:layout_height="37px"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="20px" />


        </LinearLayout>

    </LinearLayout>

