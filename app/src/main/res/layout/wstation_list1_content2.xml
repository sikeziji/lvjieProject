<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/soft_bj"
    android:orientation="vertical">

    <ListView
        android:id="@+id/wstationlistview"
        android:layout_width="750px"
        android:layout_height="370px"
        android:layout_marginLeft="25px"
        android:layout_marginTop="30px"
        android:textColor="@android:color/white"
        android:textSize="18px"/>

    <LinearLayout
        android:layout_width="790px"
        android:layout_height="50px"
        android:layout_marginTop="10px"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/wstationBtn_firstPage"
            style="@style/CButton_Dialog"
            android:layout_marginLeft="30px"
            android:textAllCaps="false"
            android:text="首页" />

        <Button
            android:id="@+id/wstationBtn_lastPage"
            style="@style/CButton_Dialog"
            android:layout_marginLeft="30px"
            android:textAllCaps="false"
            android:text="上页" />

        <Button
            android:id="@+id/wstationBtn_nextPage"
            style="@style/CButton_Dialog"
            android:layout_marginLeft="30px"
            android:textAllCaps="false"
            android:text="下页" />

        <Button
            android:id="@+id/wstationBtn_tailPage"
            style="@style/CButton_Dialog"
            android:layout_marginLeft="30px"
            android:textAllCaps="false"
            android:text="尾页" />

        <Button
            android:id="@+id/wstationBtn_export"
            style="@style/CButton_Dialog"
            android:layout_marginLeft="30px"
            android:textAllCaps="false"
            android:text="导出" />
        <Button
            android:id="@+id/wstationBtn_update"
            style="@style/CButton_Dialog"
            android:layout_marginLeft="30px"
            android:textAllCaps="false"
            android:visibility="gone"
            android:text="补传" />
    </LinearLayout>

</LinearLayout>
