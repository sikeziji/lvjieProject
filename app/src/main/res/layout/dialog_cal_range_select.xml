<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="288px"
    android:layout_height="308px"
    android:background="@drawable/dialog"
    android:baselineAligned="false"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginTop="30px"
        android:gravity="center|center_vertical">

        <TextView
            android:id="@+id/D_Selecttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginTop="5px"
        android:gravity="center|center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="校准后启动量程:"
            android:textColor="@android:color/white"
            android:textSize="20px" />

        <Button
            android:id="@+id/D_SelectRange"
            style="@style/CButton_Dialog"
            android:layout_margin="8px"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:gravity="center|center_vertical"
        android:orientation="horizontal"
        android:padding="5px">

        <Button
            android:id="@+id/D_SelectOK"
            style="@style/CButton_Dialog"
            android:layout_margin="8px"
            android:text="@string/sure"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/D_SelectCancel"
            style="@style/CButton_Dialog"
            android:layout_margin="8px"
            android:text="@string/cancel"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>