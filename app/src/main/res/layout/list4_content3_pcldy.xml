<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="800px"
        android:layout_height="427px"
        android:layout_marginTop="25px"
        android:background="@drawable/bj_p"
        android:orientation="vertical">

        <!--返回标题栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnReturn_p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:background="@null"
                android:src="@drawable/btn_return" />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mea_unit_select"
                android:textColor="@android:color/white"
                android:textSize="20px" />
        </LinearLayout>

        <!--主内容区-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--左半部分-->
            <LinearLayout
                android:layout_width="465px"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="20px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/real_time_measurement"
                        android:textColor="@android:color/white"
                        android:textSize="20px" />

                    <ToggleButton
                        android:id="@+id/tBtnCLDY_sscl"
                        android:layout_width="92px"
                        android:layout_height="42px"
                        android:layout_marginLeft="10px"
                        android:background="@drawable/togglebtn"
                        android:text="@string/autoJob"
                        android:textOff=" "
                        android:textOn=" " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="232px"
                    android:layout_gravity="center"
                    android:layout_marginTop="30px"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/cldy_engReference"
                            style="@style/Show_textStyle"
                            android:layout_width="114px"
                            android:layout_height="44px"
                            android:layout_gravity="right"
                            android:layout_marginTop="50px"
                            android:background="@drawable/cldy_clz"
                            android:text="" />
                        <TextView
                            style="@style/Show_textStyle"
                            android:layout_width="84px"
                            android:layout_height="44px"
                            android:layout_marginLeft="80px"
                            android:layout_marginTop="40px"
                            android:background="@drawable/cldy_led"
                            android:text="LED" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/cldy_temp"
                        style="@style/Show_textStyle"
                        android:layout_width="84px"
                        android:layout_height="204px"
                        android:layout_marginLeft="25px"
                        android:layout_marginTop="14px"
                        android:background="@drawable/cldy_xjg"
                        android:text="" />

                    <TextView
                        android:id="@+id/cldy_eng"
                        style="@style/Show_textStyle"
                        android:layout_width="114px"
                        android:layout_height="44px"
                        android:layout_marginLeft="25px"
                        android:layout_marginTop="50px"
                        android:background="@drawable/cldy_clz"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10px"
                    android:visibility="invisible"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5px"
                        android:text="@string/LEDsave"
                        android:textColor="@android:color/white"
                        android:textSize="20px" />

                    <ToggleButton
                        android:id="@+id/tBtnCLDY_BS_BSCC"
                        android:layout_width="92px"
                        android:layout_height="42px"
                        android:layout_marginLeft="5px"
                        android:background="@drawable/togglebtn"
                        android:text="@string/autoJob"
                        android:textOff=" "
                        android:textOn=" " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5px"
                        android:text="吸收/参比"
                        android:textColor="@android:color/white"
                        android:textSize="20px" />

                    <TextView
                        android:id="@+id/cldy_gddpnl"
                        style="@style/Show_textStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="44px"
                        android:layout_marginLeft="5px"
                        android:background="@drawable/cldy_clz"
                        android:textSize="15px"
                        android:text="" />

                </LinearLayout>

            </LinearLayout>

            <!--右半部分-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48px"
                    android:layout_marginTop="100px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/liquid_detection"
                        android:textColor="@android:color/white"
                        android:textSize="20px" />

                    <EditText
                        android:id="@+id/eT_djlw"
                        style="@style/CEditText"
                        android:ems="4"
                        android:imeOptions="actionDone"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text="±"
                        android:textColor="@android:color/white"
                        android:textSize="20px" />

                    <EditText
                        android:id="@+id/eT_djlw_fd"
                        style="@style/CEditText"
                        android:ems="4"
                        android:imeOptions="actionDone"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48px"
                    android:layout_marginTop="60px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/Btn_pjldy_gjlw"
                        style="@style/CButton_Dialog"
                        android:layout_marginLeft="130px"
                        android:text="@string/temperature_calibration" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44px"
                    android:layout_marginTop="100px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="@string/bs_light"
                        android:textColor="@android:color/white"
                        android:textSize="20px" />

                    <ToggleButton
                        android:id="@+id/tBtnCLDY_BS_LED"
                        android:layout_width="92px"
                        android:layout_height="42px"
                        android:layout_marginLeft="30px"
                        android:background="@drawable/togglebtn"
                        android:text="@string/autoJob"
                        android:textOff=" "
                        android:textOn=" " />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_bs_led_change"
                    android:layout_width="match_parent"
                    android:layout_height="44px"
                    android:layout_marginTop="10px"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="@string/light_change"
                        android:textColor="@android:color/white"
                        android:textSize="20px" />

                    <ToggleButton
                        android:id="@+id/tBtnBS_LED_2"
                        android:layout_width="92px"
                        android:layout_height="42px"
                        android:layout_marginLeft="30px"
                        android:background="@drawable/togglebtn"
                        android:text="@string/autoJob"
                        android:textOff=" "
                        android:textOn=" " />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48px"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15px"
                   >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="@string/led_channel"
                        android:textColor="@android:color/white"
                        android:textSize="20px"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spLedGain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:animationCache="true"
                        android:drawSelectorOnTop="true"
                        android:popupBackground="@android:color/white">

                    </Spinner>

                    <Button
                        style="@style/CButton_Dialog"
                        android:layout_marginLeft="35px"
                        android:text="@string/calibration_light"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="68px"
                    android:layout_marginTop="20px"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="@string/calibration_coe"
                        android:textColor="@android:color/white"
                        android:textSize="20px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTemperKB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60px"
                        android:layout_marginTop="10px"
                        android:text="    "
                        android:textColor="@android:color/white"
                        android:textSize="20px"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>