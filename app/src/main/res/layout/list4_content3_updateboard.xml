<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="800px"
        android:layout_height="427px"
        android:layout_marginTop="25px"
        android:layout_marginLeft="25px"
        android:background="@drawable/bj_p"
        android:orientation="vertical">

        <!--返回标题栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnReturnFlow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:background="@null"
                android:src="@drawable/btn_return" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:text="@string/update_config_select"
                android:textColor="@android:color/white"
                android:textSize="20px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edFileText"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20px"
                android:background="@android:drawable/edit_text"
                android:enabled="false"
                android:gravity="center_vertical|center"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <Button
                android:id="@+id/btnChooseFile"
                android:layout_width="182px"
                android:layout_height="58px"
                android:layout_marginLeft="50px"
                android:background="@drawable/btn"
                android:text="@string/select_the_file"
                android:textAllCaps="false"
                android:textSize="25px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:shadowColor="@android:color/white"
                android:text="@string/update_status"
                android:textColor="@android:color/white"
                android:textSize="25px" />

            <TextView
                android:id="@+id/txSchedule"
                android:layout_width="250px"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:shadowColor="@android:color/white"
                android:text="0%"
                android:textColor="@android:color/white"
                android:textSize="25px" />

            <Button
                android:id="@+id/btnUpdateCKB"
                android:layout_width="182px"
                android:layout_height="58px"
                android:layout_marginLeft="170px"
                android:background="@drawable/btn"
                android:text="@string/update_ckb"
                android:textAllCaps="false"
                android:textSize="25px" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
