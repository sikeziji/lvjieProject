<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtMeaParName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80px"
                        android:gravity="center"
                        android:shadowColor="@android:color/white"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="5"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="30px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5px"
                        android:gravity="center"
                        android:shadowColor="@android:color/white"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="5"
                        android:text="校准"
                        android:textColor="@android:color/white"
                        android:textSize="30px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_adjust1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40pt"
                    android:layout_marginTop="20px"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="130px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:gravity="right"
                        android:text="调零值"
                        android:textColor="@android:color/white"
                        android:textSize="22px" />

                    <EditText
                        android:id="@+id/eTPara1"
                        style="@style/CEditText"
                        android:layout_marginLeft="10px"
                        android:ems="4"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/txtUnit"
                        android:layout_width="130px"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="NTU"
                        android:textColor="@android:color/white"
                        android:textSize="22px" />

                    <Button
                        android:id="@+id/btnNtuKRead"
                        style="@style/CButton_Big"
                        android:layout_marginLeft="15px"
                        android:text="读取"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/Btn_Para1"
                        style="@style/CButton_Big"
                        android:layout_marginLeft="15px"
                        android:text="调零"
                        android:textAllCaps="false" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_adjust2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40pt"
                    android:layout_marginTop="20px"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtName2"
                        android:layout_width="130px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:gravity="right"
                        android:text="标定值"
                        android:textColor="@android:color/white"
                        android:textSize="22px" />

                    <EditText
                        android:id="@+id/eTPara2"
                        style="@style/CEditText"
                        android:layout_marginLeft="10px"
                        android:ems="4"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/txtUnit2"
                        android:layout_width="130px"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="NTU"
                        android:textColor="@android:color/white"
                        android:textSize="22px" />

                    <Button
                        android:id="@+id/Btn_Para2"
                        style="@style/CButton_Big"
                        android:layout_marginLeft="15px"
                        android:text="标定"
                        android:textAllCaps="false" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40pt"
                    android:layout_marginTop="20px"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:gravity="right"
                        android:text="测量值"
                        android:textColor="@android:color/white"
                        android:textSize="22px" />

                    <EditText
                        android:id="@+id/etMeaData"
                        style="@style/CEditText"
                        android:layout_marginLeft="10px"
                        android:background="@color/darkGray"
                        android:ems="4"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/txtMeaUnit"
                        android:layout_width="130px"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="NTU"
                        android:textColor="@android:color/white"
                        android:textSize="22px" />

                    <Button
                        android:id="@+id/Btn_Read"
                        style="@style/CButton_Big"
                        android:layout_marginLeft="15px"
                        android:text="读取"
                        android:textAllCaps="false" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
